{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Database=dataworkflows;Username=postgres;Password=postgres"
  },
  "Orchestration": {
    "MaxParallelActions": 10,
    "DefaultActionTimeout": "00:05:00",
    "DefaultWorkflowTimeout": "01:00:00",
    "RetryPolicy": {
      "MaxAttempts": 3,
      "InitialDelay": "00:00:00.200",
      "BackoffFactor": 2.0,
      "UseJitter": true
    }
  },
  "Auth": {
    "AllowLooseAuth": true,
    "RequirePrincipalForExecute": false
  },
  "TemplateEngineOptions": {
    "RenderTimeoutMs": 2000,
    "StrictMode": true,
    "EnableLoops": false,
    "EnableFunctions": false
  }
}
